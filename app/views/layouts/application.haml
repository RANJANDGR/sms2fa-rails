!!!
%html
  %head
    %title SMS 2 Factor Authentication
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1, user-scalable=no'}
    = javascript_include_tag 'application'
    = stylesheet_link_tag '//maxcdn.bootstrapcdn.com/bootswatch/3.3.6/paper/bootstrap.min.css'
    = stylesheet_link_tag '//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css'
    = stylesheet_link_tag 'application', media: 'all'
    = csrf_meta_tags
  %body
    .navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          %a.navbar-brand(href="/") Control & Kaos
          %button.navbar-toggle(type="button"){data: { toggle: "collapse", target: "#navbar-main" }}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
        .navbar-collapse.collapse#navbar-main
          %ul.nav.navbar-nav.navbar-right
            - if authenticated?
              %li
                = link_to "Log Out", logout_path
            - else
              %li
                = link_to "Sign Up", new_user_path
              %li
                = link_to "Sign In", new_session_path

    - if flash[:notice]
      .alert.alert-success.alert-dismissible{ role: "alert" }
        %button.close{ "data-dismiss" => "alert", "aria-label" => "Close"}
          %span{ "aria-hidden" => "true"} &times;
        =flash[:notice]

    - if flash[:error]
      .alert.alert-danger.alert-dismissible{ role: "alert" }
        %button.close{ "data-dismiss" => "alert", "aria-label" => "Close"}
          %span{ "aria-hidden" => "true"} &times;
        =flash[:error]

    .container
      = yield

    = javascript_include_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js'
